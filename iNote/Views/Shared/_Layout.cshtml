<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iNote</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <!--<img src="../../wwwroot/img/logo.png" width="30" height="30" alt="">-->iNote</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <form method="get">
                        @{
                        if ((ViewBag.isVisible == null) && (ViewBag.isChanging == null) && (ViewBag.isCreating == null))
                            {
                        <button class="btn btn-light" asp-controller="Notes" asp-action="Create">+</button>
                            }
                        if (ViewBag.isVisible == 1)
                            {
                        <button class="btn btn-light" asp-controller="Notes" asp-action="Change"
                            asp-route-id=@Model.Id>&#128393;</button>
                            }
                        if (ViewBag.isChanging == 1)
                            {
                        <input class="btn btn-light" type="button" value="&#11148;" id="back"/>
                        <!--<button class="btn btn-light" id="back">&#11148;</button>-->
                            }
                        if ((ViewBag.isCreating == 1) || (ViewBag.isVisible == 1))
                            {
                        <button class="btn btn-light" asp-controller="Home" asp-action="Index">&#11148;</button>
                            }
                        }
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="pt-3 @ViewBag.Color">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.ToString("yyyy") - iNote - <a asp-area="" asp-controller="Home"
                asp-action="Index">Home</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>